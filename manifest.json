{
    "name": "Native MPEG-Dash + HLS Playback",
    "version": "1.0.3",
    "description": "Allow the browser to play HLS (m3u8) or MPEG-Dash (mpd) video urls 'natively'",
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "native-dash-hls@cavar.net"
        }
    },
    "icons": { "128": "assets/icon128.png" },
    "background": { "scripts": [ "js/event.js"] },
    "content_security_policy": "script-src 'self' blob:; object-src 'self'",
    "permissions": [
        "tabs",
        "*://*/*.m3u8*",
        "*://*/*.mpd*",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_title": "Disable",
        "default_icon": "assets/icon128.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "index.html",
        "options.html",
        "popup.html",
        "js/controls.js",
        "js/event.js",
        "js/globals.js",
        "js/index.js",
        "js/jquery-3.3.1.min.js",
        "js/options.js",
        "js/player.js",
        "js/popup.js",
        "js/range.js",
        "js/dash.all.min.js",
        "js/dash.all.min.js.map",
        "js/hls.min.js",
        "state_machine.js",
        "ui_mapping.js",
        "css/animate.css",
        "css/style.css",
        "materialize/fonts/materialize-icons.woff2",
        "materialize/css/materialize.min.css",
        "materialize/css/icons.css",
        "materialize/js/materialize.min.js",
        "materialize/fonts/roboto/Roboto-Bold.woff",
        "materialize/fonts/roboto/Roboto-Bold.woff2",
        "materialize/fonts/roboto/Roboto-Light.woff",
        "materialize/fonts/roboto/Roboto-Light.woff2",
        "materialize/fonts/roboto/Roboto-Medium.woff",
        "materialize/fonts/roboto/Roboto-Medium.woff2",
        "materialize/fonts/roboto/Roboto-Regular.woff",
        "materialize/fonts/roboto/Roboto-Regular.woff2",
        "materialize/fonts/roboto/Roboto-Thin.woff",
        "materialize/fonts/roboto/Roboto-Thin.woff2"
    ]
}
